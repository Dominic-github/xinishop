{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/@types", "./node_modules/@types"],

    // Path
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
